{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "优购商城",
				"enablePullDownRefresh":false
			}
		}, {
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "购物车"
			}
		}, {
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "pages/sort/sort",
			"style": {
				"navigationBarTitleText": "商品分类"
			}
		}, {
			"path" : "pages/address/address",
			"style": {
				"navigationBarTitleText": "选择地址",
				"enablePullDownRefresh": false,
				"navigationStyle":"custom"
			}
		}, {
			"path" : "pages/search/search",
			"style" : {
				"navigationBarTitleText": "搜索中心",
				"enablePullDownRefresh": false
			}
            
		}, {
			"path" : "pages/list/list",
			"style" : {
				"navigationBarTitleText": "商品列表",
				"enablePullDownRefresh": false
			}
		}
	    ,{
            "path" : "pages/detail/detail",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "商品详情",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/login/login",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "优购商城",
		"navigationBarBackgroundColor": "#d4237a",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#8a8a8a", //设置TabBar的未选中时的字体颜色
		"selectedColor": "#d4237a", //设置TabBar的选中时的字体颜色
		"backgroundColor": "#fff", //设置TabBar的背景颜色
		"borderStyle": "black", //设置TabBar上边框颜色，仅支持black/white，App2.3.4+支持其他颜色
		"position": "bottom", //默认bottom，top值仅支持微信小程序
		"list": [{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/iconPage/index.png",
				"selectedIconPath": "static/iconPage/index_pink.png"
			},
			{
				"text": "分类",
				"pagePath": "pages/sort/sort",
				"iconPath": "./static/iconPage/sort.png",
				"selectedIconPath": "static/iconPage/sort_pink.png"
			},
			{
				"text": "购物车",
				"pagePath": "pages/cart/cart",
				"iconPath": "static/iconPage/cart.png",
				"selectedIconPath": "static/iconPage/cart_pink.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/user/user",
				"iconPath": "static/iconPage/user.png",
				"selectedIconPath": "static/iconPage/user_pink.png"
			}
		]
	}
